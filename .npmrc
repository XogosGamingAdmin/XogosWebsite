# npm configuration for AWS Amplify builds
# Addresses network timeout and reliability issues

# Retry settings for network failures
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Extended timeout for large packages
timeout=300000

# Performance optimizations
prefer-offline=true
audit=false
legacy-peer-deps=true

# Progress display (useful for debugging)
loglevel=warn
